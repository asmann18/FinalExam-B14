@model EmployeeCreateVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create</h4>
            <p class="card-description">
                Department
            </p>
            <form method="post" enctype="multipart/form-data" class="forms-sample">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class=" form-controlplaceholder="Name">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class=" form-controlplaceholder="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class=" form-controlplaceholder="Image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink"></label>
                    <input asp-for="TwitterLink" class=" form-controlplaceholder="TwitterLink">
                    <span class="text-danger" asp-validation-for="TwitterLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink"></label>
                    <input asp-for="FacebookLink" class=" form-controlplaceholder="FacebookLink">
                    <span class="text-danger" asp-validation-for="FacebookLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramLink"></label>
                    <input asp-for="InstagramLink" class=" form-controlplaceholder="InstagramLink">
                    <span class="text-danger" asp-validation-for="InstagramLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedInLink"></label>
                    <input asp-for="LinkedInLink" class=" form-controlplaceholder="LinkedInLink">
                    <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartmentId"></label>
                   <select asp-for="DepartmentId" asp-items="@Model.Departments">
                        <option>Please select one</option>

                   </select>
                    <span class="text-danger" asp-validation-for="DepartmentId"></span>
                </div>

                <input asp-for="Departments" type="hidden"/>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>